<p id="notice"><%= notice %></p>

<h1>Tickets</h1>
 <h1>Usuario: <%= current_user.email %> </h1>
 <%= link_to 'Sair', destroy_user_session_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.name %></td>
        <td><%= ticket.valor %></td>
        <td><%= ticket.numbers_ticket %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

    <% end %>

  </tbody>
  
</table>
<h3>Total de numeros:</h3>
<%= total_numbers_in_single_array %>
<br>

<%= link_to 'New Ticket', new_ticket_path %>
